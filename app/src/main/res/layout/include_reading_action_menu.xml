<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_view_divider_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="֎֎֎"
        android:textSize="25sp"
        android:textColor="@color/grey_60"
        />
    <LinearLayout
        android:id="@+id/reading_action_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/holo_green_dark"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:layout_collapseMode="parallax"
            android:id="@+id/card_view_previous"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:paddingRight="3dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_decrease"
                    android:background="@android:color/holo_green_dark"
                    android:tint="@android:color/white"
                    android:id="@+id/bt_previous"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="2dp"
                    android:text="Chương trước"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_categories"
            android:background="@android:color/holo_green_dark"
            android:tint="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/holo_green_dark"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:layout_collapseMode="parallax"
            android:id="@+id/card_view_next"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Chương tiếp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="2dp"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_increase"
                    android:background="@android:color/holo_green_dark"
                    android:tint="@android:color/white"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/grey_60"
        android:text="֎֎֎"
        android:textSize="25sp"
        />
</LinearLayout>